    <span class="c1">// fun solution(n: Int): String = String(CharArray(n, {i-&gt; if(i%2==0) '수' else '박'}))</span>
    <span class="n">fun</span> <span class="nf">solution</span><span class="o">(</span><span class="nl">n:</span> <span class="nc">Int</span><span class="o">):</span> <span class="nc">String</span> <span class="o">=</span> <span class="nc">String</span><span class="o">(</span><span class="nc">CharArray</span><span class="o">(</span><span class="n">n</span><span class="o">){</span><span class="n">i</span><span class="o">-&gt;</span> <span class="k">if</span><span class="o">(</span><span class="n">i</span><span class="o">%</span><span class="mi">2</span><span class="o">==</span><span class="mi">0</span><span class="o">)</span> <span class="sc">'수'</span> <span class="k">else</span> <span class="sc">'박'</span><span class="o">})</span>

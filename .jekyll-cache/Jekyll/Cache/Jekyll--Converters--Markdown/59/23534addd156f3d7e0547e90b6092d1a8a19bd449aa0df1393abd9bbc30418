    <span class="n">fun</span> <span class="nf">solution</span><span class="o">(</span><span class="nl">n:</span> <span class="nc">Int</span><span class="o">,</span> <span class="nl">a:</span> <span class="nc">Int</span><span class="o">,</span> <span class="nl">b:</span> <span class="nc">Int</span><span class="o">):</span> <span class="nc">Int</span> <span class="o">=</span> <span class="n">run</span> <span class="o">{</span>
        <span class="kt">var</span> <span class="n">count</span> <span class="o">=</span> <span class="mi">0</span>
        <span class="kt">var</span> <span class="n">tmpA</span> <span class="o">=</span> <span class="n">a</span>
        <span class="kt">var</span> <span class="n">tmpB</span> <span class="o">=</span> <span class="n">b</span>

        <span class="nf">while</span> <span class="o">(</span><span class="n">tmpA</span> <span class="o">!=</span> <span class="n">tmpB</span><span class="o">)</span> <span class="o">{</span>
            <span class="n">tmpA</span> <span class="o">=</span> <span class="o">(</span><span class="n">tmpA</span> <span class="o">+</span> <span class="mi">1</span><span class="o">)</span> <span class="o">/</span> <span class="mi">2</span>
            <span class="n">tmpB</span> <span class="o">=</span> <span class="o">(</span><span class="n">tmpB</span> <span class="o">+</span> <span class="mi">1</span><span class="o">)</span> <span class="o">/</span> <span class="mi">2</span>
            <span class="n">count</span><span class="o">++</span>
        <span class="o">}</span>
        <span class="n">count</span>
